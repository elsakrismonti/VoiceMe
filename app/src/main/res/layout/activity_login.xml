<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        >
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:foregroundGravity="center_vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/visited"
                android:padding="20dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="@string/one"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:foregroundGravity="center_vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/unvisited"
                android:padding="20dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="@string/twoo"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:foregroundGravity="center_vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/unvisited"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:textColorHighlight="@color/softBlue"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:textColor="@color/softBlue">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:gravity="center"
        android:paddingRight="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/enter_mobile_number"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="textStart"
            >

        </TextView>

        <EditText
            android:id="@+id/eTPhoneNumber"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="17dp"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textCursorDrawable="@color/softGrey"
            android:backgroundTint="@color/softGrey"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:onClick="loginAction"
            android:layout_marginTop="50dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>